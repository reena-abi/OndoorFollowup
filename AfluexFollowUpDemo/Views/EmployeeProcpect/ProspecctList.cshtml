@model AfluexFollowUpDemo.Models.EmployeeProspect

@{
    ViewBag.Title = "ProspecctList";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

@*<h6 class="mb-0 text-uppercase">Prospect List</h6>
<hr />*@
<div class="page-breadcrumb d-none d-sm-flex align-items-center mb-3">
    <div class="breadcrumb-title pe-3">Prospect</div>
    <div class="ps-3">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb mb-0 p-0">
                <li class="breadcrumb-item">
                    <a href="javascript:;"><i class="bx bx-home-alt"></i></a>
                </li>
                <li class="breadcrumb-item active" aria-current="page">Prospect List</li>
            </ol>
        </nav>
    </div>
</div>
<hr />
@using (Html.BeginForm("ProspecctList", "EmployeeProcpect", FormMethod.Post, new { @id = "signupForm", enctype = "multipart/form-data" }))
{
<div class="card">
    <div class="card-body">
        @if (@TempData["Success"] != null)
        {
            <div class="alert border-0 bg-success alert-dismissible fade show py-2">
                <div class="d-flex align-items-center">
                    <div class="fs-3 text-white">
                        <i class="bi bi-check-circle-fill"></i>
                    </div>
                    <div class="ms-3">
                        <div class="text-white">@TempData["Success"]!</div>
                    </div>
                </div>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
        @if (@TempData["Error"] != null)
        {
            <div class="alert border-0 bg-danger alert-dismissible fade show py-2">
                <div class="d-flex align-items-center">
                    <div class="fs-3 text-white">
                        <i class="bi bi-check-circle-fill"></i>
                    </div>
                    <div class="ms-3">
                        <div class="text-white">@TempData["Error"]!</div>
                    </div>
                </div>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
        <div class="row">
            <div class="col-md-3">
                <label class="form-label">Contact Person </label>
                @Html.TextBoxFor(m => m.ContactPerson, new { @class = "form-control", @Placeholder = "Contact Person Name" })
            </div>
            <div class="col-md-3">
                <label class="form-label">Contact Number</label>
                @Html.TextBoxFor(m => m.ContactNo, new { @class = "form-control", @Placeholder = "Contact Number" })
            </div>
            <div class="col-md-3">
                <label class="form-label">Company Name</label>
                @Html.TextBoxFor(m => m.CompanyName, new { @class = "form-control", @Placeholder = "Company Name" })
            </div>
            <div class="col-md-3">
                <label class="form-label">From Date</label>
                @Html.TextBoxFor(m => m.FromDate, new { @class = "form-control", @Placeholder = "Select From Date", @readonly = "true" })
            </div>
            <div class="col-md-3">
                <label class="form-label">To Date</label>
                @Html.TextBoxFor(m => m.Todate, new { @class = "form-control", @Placeholder = "Select To Date" , @readonly="true"})
            </div>
            <div class="col-md-3">
                <label class="form-label" style="margin-top: 37px;">&nbsp;</label>
                <input class="btn btn-info" type="submit" value="Get Details" name="GetDetails">
            </div>
        </div>
        <br />

        <div class="row">
            <div class="table-responsive">
                <table id="example1" class="table table-bordered">
                    <thead>
                        <tr> <th>Contact Person</th>
                            <th>Contact EmailID</th>
                            <th>Contact Number</th>
                            <th>Industry Category</th>
                            <th>Company Name</th>
                            <th>Company Contact Number</th>
                            <th>Address</th>
                            <th>Create Date</th>
                            <th>Action</th>
                          </tr>
                    </thead>
                    <tbody>
                        @if (Model != null)
                        {
                            if (Model.lstProcpect != null)
                            {
                                foreach (var item in Model.lstProcpect)
                                {
                                    <tr>
                                      
                                        <td>@item.ContactPerson</td>
                                        <td>@item.ContactEmailId</td>
                                        <td>@item.ContactNo</td>
                                        <td>@item.Fk_IndustryCategoryId</td>
                                        <td>@item.CompanyName</td>
                                        <td>@item.CompanyContactNo</td>
                                        <td>@item.Address</td>
                                        <td>@item.CreateDate</td>
                                        <td>
                                            @*<a href="/EmployeeProcpect/EmployeeProspect?Pk_ProcpectId=@item.Pk_ProcpectId" class="label label-primary"><i class="bi bi-pencil-fill"></i></a>
                                            &nbsp;*@
                                            <a href="/EmployeeProcpect/DeleteProspect?Pk_ProcpectId=@item.Pk_ProcpectId" onclick="return confirm('Do you want to delete this PROSPECT  ?');" class="text-danger"><i class="bi bi-trash-fill"></i></a>
                                        </td>
                                    </tr>
                                }
                            }
                        }

                    </tbody>

                </table>
            </div>
        </div>

    </div>
</div>
}
<link rel="stylesheet" href="//code.jquery.com/ui/1.13.0/themes/base/jquery-ui.css">
<link rel="stylesheet" href="/resources/demos/style.css">
<script src="https://code.jquery.com/jquery-3.6.0.js"></script>
<script src="https://code.jquery.com/ui/1.13.0/jquery-ui.js"></script>
<script>
    $('#FromDate').datepicker({
        dateFormat: 'dd/mm/yy',
        changeMonth: true,
        changeYear: true,
    });
    $('#Todate').datepicker({
        dateFormat: 'dd/mm/yy',
        changeMonth: true,
        changeYear: true,
    });
</script>