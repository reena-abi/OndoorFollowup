@model AfluexFollowUpDemo.Models.Lead
@{
    ViewBag.Title = "DashBoard";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="page-breadcrumb d-none d-sm-flex align-items-center mb-3">
    <div class="breadcrumb-title pe-3">Home</div>
    <div class="ps-3">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb mb-0 p-0">
                <li class="breadcrumb-item">
                    <a href="javascript:;"><i class="bx bx-home-alt"></i></a>
                </li>
                <li class="breadcrumb-item active" aria-current="page">DashBoard</li>
            </ol>
        </nav>
    </div>
</div>
<hr />

<h6 class="mb-0 text-uppercase todays">Today's Followup</h6>
<hr />
<div class="card todays">
    <div class="card-body">
        <div class="table-responsive">
            <table id="example1" class="table table-striped table-bordered" style="width:100%" >
                <thead>
                    <tr>
                        <th>Contact Person</th>
                        <th>Mobile No.</th>
                        <th>Interaction Date</th>
                        <th>Previous Followup Date</th>
                        <th>Followup Date</th>
                        <th>Expected Product</th>
                        <th>Data Source</th>
                        <th>Executive Name</th>
                        <th>Mode Of Interaction</th>
                        <th>Description </th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null)
                    {
                        if (Model.lstLead != null)
                        {
                            foreach (var item in Model.lstLead)
                            {
                                <tr>
                                    <td>@item.Fk_ProcpectId</td>
                                    <td>@item.ContactNo</td>
                                    <td>@item.FirstInstructionDate</td>
                                    <td>@item.PrevioussDate</td>
                                    <td>@item.FollowupDate</td>
                                    <td>@item.Fk_ExpectedProductCategoryId</td>
                                    <td>@item.Fk_SourceId</td>
                                    <td>@item.Fk_ExecutiveId</td>
                                    <td>@item.Fk_ModeInterActionId</td>
                                    <td>@item.Description</td>
                                </tr>

                            }
                        }

                    }

                </tbody>

            </table>
        </div>
    </div>
</div>
