@model AfluexFollowUpDemo.Models.Procpect

@{
    ViewBag.Title = "ProspecctList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@*<h6 class="mb-0 text-uppercase">Get Prospect List</h6>*@

<div class="page-breadcrumb d-none d-sm-flex align-items-center mb-3">
    <div class="breadcrumb-title pe-3">Prospect</div>
    <div class="ps-3">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb mb-0 p-0">
                <li class="breadcrumb-item">
                    <a href="javascript:;"><i class="bx bx-home-alt"></i></a>
                </li>
                <li class="breadcrumb-item active" aria-current="page">Prospect List</li>
            </ol>
        </nav>
    </div>
</div>
<hr />
<div class="card">
@using (Html.BeginForm("ProspecctList", "Procpect", FormMethod.Post, new { @id = "signupForm", enctype = "multipart/form-data" }))
{
     <div class="card-body">
        <div class="row">
            <div class="col-md-3 mt-2">
                <label class="form-label">Contact Person <span style="color: red">*</span></label>
                @Html.TextBoxFor(m => m.ContactPerson, new { @class = "form-control", @Placeholder = "Enter Contact Person" })
               
            </div>
            <div class="col-md-3 mt-2">
                <label class="form-label">Contact Number</label>
                @Html.TextBoxFor(m => m.ContactNo, new { @class = "form-control", @Placeholder = "Enter Contact Number" })
              
            </div>
            <div class="col-md-3 mt-2">
                <label class="form-label">Company Name</label>
                @Html.TextBoxFor(m => m.CompanyName, new { @class = "form-control", @Placeholder = "Enter Company Name" })
            </div>
            <div class="col-md-3 mt-2">
                <label class="form-label">From Date</label>
                @Html.TextBoxFor(m => m.FromDate, new { @class = "form-control", @readonly = "readonly", @Placeholder = "From Date" })
            </div>
            <div class="col-md-3 mt-2">
                <label class="form-label">To Date</label>
                @Html.TextBoxFor(m => m.ToDate, new { @class = "form-control", @readonly = "readonly", @Placeholder = "To Date" })
            </div>
            <div class="col-md-3 mt-2">
                <label class="form-label" style="margin-top: 37px;">&nbsp;</label>
                <input class="btn btn-info" type="submit" value="Get Details" name="GetDetails">
            </div>
        </div>
        <br />
        <div class="row">
            <div class="table-responsive">
                <table id="example1" class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th>Contact Person</th>
                            <th>Contact Email ID</th>
                            <th>Contact Number</th>
                            <th>Industry Category</th>
                            <th>Company Name</th>
                            <th>Company Contact Number</th>
                            <th>Address</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null)
                        {
                            if (Model.lstProcpect != null)
                            {
                                foreach (var item in Model.lstProcpect)
                                {
                                    <tr>
                                         <td>@item.ContactPerson</td>
                                        <td>@item.ContactEmailId</td>
                                        <td>@item.ContactNo</td>
                                        <td>@item.Fk_IndustryCategoryId</td>
                                        <td>@item.CompanyName</td>
                                        <td>@item.CompanyContactNo</td>
                                        <td>@item.Address</td>
                                        <td>
                                            @*<a href="/Procpect/Procpect?Pk_ProcpectId=@item.Pk_ProcpectId" class="label label-primary"><i class="bi bi-pencil-fill"></i></a>
                                            &nbsp;*@
                                            <a href="/Procpect/DeleteProspect?Pk_ProcpectId=@item.Pk_ProcpectId" onclick="return confirm('Do you want to delete this Prospect ?');" class="text-danger"><i class="bi bi-trash-fill"></i></a>
                                        </td>
                                    </tr>
                                }
                            }
                        }

                    </tbody>

                </table>
            </div>
        </div>
    </div>
}
</div>
<link href="http://ajax.googleapis.com/ajax/libs/jqueryui/1.8/themes/base/jquery-ui.css" rel="stylesheet" type="text/css" />
<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.5/jquery.min.js"></script>
<script src="http://ajax.googleapis.com/ajax/libs/jqueryui/1.8/jquery-ui.min.js"></script>
<script>
    $('#FromDate').datepicker({
        dateFormat: 'dd-mm-yy',
        changeYear: true,
        changeMonth: true
    });

    $('#ToDate').datepicker({
        dateFormat: 'dd-mm-yy',
        changeYear: true,
        changeMonth: true
    });

</script>
