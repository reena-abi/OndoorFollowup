
@{
    ViewBag.Title = "DataSourceList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@*<h6 class="mb-0 text-uppercase">Data Source List</h6>
<hr />*@
<div class="page-breadcrumb d-none d-sm-flex align-items-center mb-3">
    <div class="breadcrumb-title pe-3">Master</div>
    <div class="ps-3">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb mb-0 p-0">
                <li class="breadcrumb-item">
                    <a href="javascript:;"><i class="bx bx-home-alt"></i></a>
                </li>
                <li class="breadcrumb-item active" aria-current="page"> Data Source List</li>
            </ol>
        </nav>
    </div>
</div>
<hr />
<div class="card">
    <div class="card-body">
        @if (@TempData["Success"] != null)
        {
            <div class="alert border-0 bg-success alert-dismissible fade show py-2">
                <div class="d-flex align-items-center">
                    <div class="fs-3 text-white">
                        <i class="bi bi-check-circle-fill"></i>
                    </div>
                    <div class="ms-3">
                        <div class="text-white">@TempData["Success"]!</div>
                    </div>
                </div>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
        @if (@TempData["Error"] != null)
        {
            <div class="alert border-0 bg-danger alert-dismissible fade show py-2">
                <div class="d-flex align-items-center">
                    <div class="fs-3 text-white">
                        <i class="bi bi-check-circle-fill"></i>
                    </div>
                    <div class="ms-3">
                        <div class="text-white">@TempData["Error"]!</div>
                    </div>
                </div>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
        <div class="table-responsive">
            <div class="card">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <h5 class="mb-0">Data Source List</h5>
                        <form class="ms-auto position-relative">
                            <div class="position-absolute top-50 translate-middle-y search-icon px-3"><i class="bi bi-search"></i></div>
                            <input class="form-control ps-5" type="text" placeholder="search">
                        </form>
                    </div>
@using (Html.BeginForm("DataSourceList", "Master", FormMethod.Post, new { @id = "signupForm", enctype = "multipart/form-data" }))
{

                    <div class="table-responsive mt-3">
                        <table class="table align-middle table-bordered">
                            <thead class="table-secondary">
                                <tr>
                                    <th>#</th>
                                    <th>Name</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model != null)
                                {
                                    if (Model.lstSource != null)
                                    {
                                        int i = 1;
                                        foreach (var item in Model.lstSource)
                                        {
                                            <tr>
                                                <td>@i</td>
                                                <td>
                                                     <div class="d-flex align-items-center gap-3 cursor-pointer">
                                                         <div class="">
                                                              <p class="mb-0">@item.SourceName</p>
                                                         </div>
                                                      </div>
                                                </td>
                                                <td>
                                                    <div class="table-actions d-flex align-items-center gap-3 fs-6">
                                                         <a href="/Master/DataSourceMaster?Pk_SourceId=@item.Pk_SourceId" class="text-warning" data-bs-toggle="tooltip" data-bs-placement="bottom" title="Edit"><i class="bi bi-pencil-fill"></i></a>
                                                        &nbsp;
                                                        <a href="/Master/DeleteDataSourceMaster?Pk_SourceId=@item.Pk_SourceId" onclick="return confirm('Do you want to delete this Data Source ?');" class="text-danger"><i class="bi bi-trash-fill"></i></a>
                                                     </div>
                                                </td>
                                             </tr>
                                            i = i + 1;
                                        }
                                    }
                                }
                            </tbody>

                        </table>
                    </div>
}
                </div>
            </div>
        </div>
    </div>
</div>


